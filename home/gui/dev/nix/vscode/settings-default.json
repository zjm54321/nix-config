{
    "workbench.settings.applyToAllProfiles": [
        "nix.enableLanguageServer",
        "nix.formatterPath",
        "nix.serverSettings",
        "nixEnvSelector.useFlakes"
    ],
    
    "nix.enableLanguageServer": true,
    "nix.formatterPath": "nixfmt",
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": [
                    "nixfmt"
                ]
            }
        }
    },
    "nixEnvSelector.useFlakes": true
}